<SettingsScreen@MDScreen>:
    name: "settings"
    MDRelativeLayout:
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"left": 1.0, "center_y": 0.95}
            theme_text_color: "Custom"
            text_color: "black" if app.theme_cls.theme_style == "Light" else "white"
            on_release:
                app.switch_screen("home")
        MDLabel:
            text:"Settings"
            font_style:"H5"
            halign:"center"
            pos_hint: {"center_y": 0.95}
            theme_text_color: "Custom"
            text_color: "black" if app.theme_cls.theme_style == "Light" else "white"
        MDBoxLayout:
            orientation: "vertical"
            size_hint: 0.9, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
#            md_bg_color: app.theme_cls.primary_color
            MDLabel:
                id: settings_email
                text: "Email: "
                bold: True
                theme_text_color: "Custom"
                text_color: "black" if app.theme_cls.theme_style == "Light" else "white"
            MDLabel:
                id: settings_username
                text: "Username: "
                bold: True
                theme_text_color: "Custom"
                text_color: "black" if app.theme_cls.theme_style == "Light" else "white"
            MDRelativeLayout:
                MDLabel:
                    text: "Choose theme"
                    bold: True
                    theme_text_color: "Custom"
                    text_color: "black" if app.theme_cls.theme_style == "Light" else "white"
                MDDropDownItem:
                    id: dropdown_item
                    pos_hint: {"right": 1.0, "center_y": 0.5}
                    text: app.store.get("theme")["theme"] if "theme" in app.store else "Light"
                    bold: True
                    on_release: app.menu.open()
            MDRelativeLayout:
                MDLabel:
                    text: "Delete Account"
                    bold: True
                    theme_text_color: "Custom"
                    text_color: "black" if app.theme_cls.theme_style == "Light" else "white"
                MDIconButton:
                    id: delete_account
                    pos_hint: {"right": 1.0, "center_y": 0.5}
                    icon: "delete"
                    theme_text_color: "Custom"
                    text_color: "black" if app.theme_cls.theme_style == "Light" else "white"
                    on_release: app.delete_account(self)
            MDRelativeLayout:
                MDLabel:
                    text: "Log Out"
                    bold: True
                    theme_text_color: "Custom"
                    text_color: "black" if app.theme_cls.theme_style == "Light" else "white"
                MDIconButton:
                    id: log_out
                    pos_hint: {"right": 1.0, "center_y": 0.5}
                    icon: "logout"
                    theme_text_color: "Custom"
                    text_color: "black" if app.theme_cls.theme_style == "Light" else "white"
                    on_release: app.log_out()


SettingsScreen: